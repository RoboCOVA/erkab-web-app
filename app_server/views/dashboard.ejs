<body>

<% include templates/header.ejs %>

<!-- START OF CHANGEABLE VIEW -->
<div id="changeableView">

    <a class="weatherwidget-io" href="https://forecast7.com/en/30d7629d70/alexandria-governorate/"
       data-label_1="ALEXANDRIA" data-label_2="WEATHER" data-font="Ubuntu" data-icons="Climacons Animated"
       data-mode="Current" data-days="3" data-theme="pure" data-textColor="#393953" style="height: 300px !important;">ALEXANDRIA
        WEATHER</a>

    <div class="ticker-container">
        <div class="ticker-caption">

            <!-- The info displayed here acts as a placeholder for the ride request info. -->
            <p class="uppercase">Latest Requests</p>
        </div>
        <ul>
            <% if(pendingRides.length > 0) {
            for(var i = 0; i < pendingRides.length; i++) { %>
            <div>
                <li><span><span class="badge badge-pill badge-warning uppercase d-inline"><%= pendingRides[i].userType %></span> <i
                                class="fa fa-fw fa-calendar"></i> <%= pendingRides[i].date %> - <i
                                class="fa fa-fw fa-clock-o"></i> <%= pendingRides[i].time %> - <i
                                class="fa fa-fw fa-map-marker"></i> <%= pendingRides[i].area %></span>
                </li>
            </div>
            <% } %>
            <div>
                <li><span><i class="fa fa-comment"></i> That's all for now! - Erkab</span>
                </li>
            </div>
            <% } else { %>
            <div>
                <li><span><i class="fa fa-exclamation-circle"></i> No requests available. Check back in a few!</span>
                </li>
            </div>
            <div>
                <li><span><i class="fa fa-exclamation-circle"></i> Nothing yet <%= user.firstName %>. Refresh?</span>
                </li>
            </div>
            <div>
                <li><span><i class="fa fa-exclamation-circle"></i> How about you send a request to get the ball rolling!</span>
                </li>
            </div>
            <% } %>
        </ul>
    </div>

    <div id="map"></div>
    <div id="rideDiv">
        <a id="rideBtn" class="btn btn-lg btn-edited" href="/request"><i class="fa fa-fw fa-search"></i><span
                    class="badge uppercase">Find a Ride</span></a>
    </div>
</div>
<!-- END OF CHANGEABLE VIEW -->

<% include templates/preloader.ejs %>

